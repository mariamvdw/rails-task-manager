<%= link_to edit_restaurant_path(@restaurant.id), class: 'pull-right btn btn-default' do %>
  <i class="fa fa-pencil"></i> Edit this restaurant
<% end %>

<h1><%= @restaurant.name %></h1>

<p class="well"><%= @restaurant.address %></p>
<p class="well"><%= @restaurant.phone_number %></p>
<p class="well"><%= @restaurant.category %></p>

<hr>

<%= link_to restaurants_path do %>
  <i class="fa fa-history"></i> Back to list
<% end %>




<h2>Reviews</h2>

<%= link_to new_restaurant_review_path(@restaurant) do %>
  <i class="fa fa-history"></i> Add review
<% end %>

<ul>
  <% @restaurant.reviews.each do |review| %>
   <li> <%= review.content %> | <%= review.rating %> </li>
  <% end %>
</ul>
